{
    "ignore": [
        "firebase.json",
        "database-rules.json",
        "storage.rules",
        "functions"
    ],
    "firestore": {
        "rules": "firestore.rules"
    },
    "hosting": {
        "public": "build",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "/api/search",
                "function": "search"
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}
